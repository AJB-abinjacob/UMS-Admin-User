
<h1>Users List</h1>

<br><br>
<table style="width: 100%;">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Verified</th>
        
      </tr>

      <%if(users.length>0){%> 

        <%for(i=0;i<users.length;i++){%>

            <tr>
                <td><%=users[i].name%></td>
                <td><%=users[i].email%></td>
                <td><%=users[i].mobile%></td>
                <td>
                  <img
                    src="http://localhost:3000/userImages/<%=users[i].image%>"
                    alt=""
                    width="100px"
                    height="100px"
                  />
                </td>
                <td>
                  <%if(users[i].is_verified == 0){%>
                  <p>Not Verified</p>
                  <%}else{%>
                  <p>Verified</p>
                  <%}%>
                </td>
<td>
  
</td>

            </tr>


        <%}%>
        <%}else{%>
            <tr>
                <td colspan="5">Users Not Found!</td>
              </tr>

        <%}%>

</table>

